<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2.5dp"
        app:cardCornerRadius="7.5dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
>
         <RelativeLayout
             android:id="@+id/brand_lt"
             android:visibility="visible"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

             <androidx.cardview.widget.CardView
                 android:id="@+id/brand_img_bg"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_marginTop="12dp"
                 android:layout_marginLeft="15dp"
                 android:layout_marginRight="15dp"
                 app:cardElevation="2.5dp"
                 android:layout_centerHorizontal="true"
                 app:cardCornerRadius="5dp">
                 <ImageView
                     android:id="@+id/brand_img"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:src="@drawable/po_one"
                     android:layout_margin="-10dp"
                     />
             </androidx.cardview.widget.CardView>

             <TextView
                 android:id="@+id/brand_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="12dp"
                 android:gravity="left"
                 android:textSize="14dp"
                 android:text="Store"
                 android:textStyle="bold"
                 android:textColor="@color/black"
                 android:fontFamily="@font/poppins_regular"
                 android:layout_marginBottom="0dp"
                 android:layout_below="@+id/brand_img_bg"
                 />


         </RelativeLayout>
            <RelativeLayout
                android:id="@+id/offer_lt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_img_bg"
                    android:layout_width="135dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="5dp">
                    <ImageView
                        android:id="@+id/item_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/po_one"
                        android:layout_margin="-10dp"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/item_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="12dp"
                    android:gravity="left"
                    android:text="Store"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                     android:layout_marginBottom="0dp"
                    android:layout_below="@+id/item_img_bg"
                    />
                <TextView
                    android:id="@+id/item_offer_hint"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2.25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:text="Exclusive Offers"
                    android:textColor="@color/hint_clr_grey"
                    android:fontFamily="@font/poppins_regular"
                     android:layout_marginBottom="8dp"
                    android:layout_below="@+id/item_txt"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>