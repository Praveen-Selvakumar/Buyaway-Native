<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainFrame.NewArrival">

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Arrivals"
        android:textSize="20dp"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
         android:src="@drawable/back_btn"
        android:layout_margin="25dp"/>

    <ImageView
        android:id="@+id/back_bg"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />



    <androidx.cardview.widget.CardView
            android:id="@+id/cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/back_btn"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="15dp"
            app:cardElevation="15dp">

            <ImageView
                android:id="@+id/pr_img"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>

            <TextView
                android:id="@+id/brand_name_txt"
                android:text="LP"
                android:textSize="18dp"
                android:textColor="@color/app_src_clr"
                android:textStyle="bold"
                android:visibility="gone"
                android:elevation="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/brand_des_txt"
                android:text="DES"
                android:textSize="18dp"
                android:textColor="@color/app_src_clr"
                android:textStyle="bold"
                android:visibility="gone"
                android:elevation="15dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/cd"
            android:visibility="gone"
            app:cardElevation="5dp"
            android:layout_marginTop="-50dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/alert_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="7dp"
                    android:layout_marginBottom="7dp"
                    android:text="Price is not updated"
                    android:textColor="@color/black"
                     android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:gravity="center"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


 </RelativeLayout>