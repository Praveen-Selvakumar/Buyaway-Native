<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transpanrency"
    android:backgroundTint="@color/transpanrency"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <TextView
           android:id="@+id/exit_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Buyaway"
           android:textColor="@color/black"
           android:fontFamily="@font/poppins_regular"
           android:textSize="30dp"
           android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
           android:layout_marginTop="20dp"/>
       <TextView
           android:id="@+id/con"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" Are you sure you wanna exit ?"
           android:textColor="@color/black"
           android:layout_below="@+id/exit_txt"
           android:fontFamily="@font/poppins_regular"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="10dp"/>


       <TextView
           android:id="@+id/cancel_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/con"
           android:text="cancel"
           android:textStyle="bold"
           android:textSize="15dp"
           android:fontFamily="@font/poppins_regular"
           android:layout_alignParentRight="true"
           android:layout_marginRight="40dp"
           android:layout_marginBottom="10dp"
           android:textColor="@color/black"
           />
       <TextView
           android:id="@+id/exit_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/con"
           android:text="Exit"
           android:textSize="15dp"
           android:fontFamily="@font/poppins_regular"
            android:layout_marginRight="20dp"
           android:layout_toLeftOf="@+id/cancel_btn"
           android:textColor="@color/btn_clr"
           />


   </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/buyaway_logo_blue"
        android:layout_marginLeft="30dp"
        android:elevation="10dp"/>


</RelativeLayout>